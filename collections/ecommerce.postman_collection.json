{
  "info": { "name": "Ecommerce Demo", "_postman_id": "demo-qa", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "List users (GET)",
      "request": { "method": "GET", "url": "{{baseUrl}}/users?page=1" },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', () => pm.response.to.have.status(200));",
          "pm.test('JSON', () => pm.response.to.be.json);",
          "const j = pm.response.json();",
          "pm.expect(j).to.have.property('page');"
        ]}
      }]
    },
    {
      "name": "Create user (POST)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/users",
        "body": { "mode": "raw", "raw": "{\"name\":\"morpheus\",\"job\":\"leader\"}" }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 201', () => pm.response.to.have.status(201));",
          "const schema = { type:'object', required:['id','createdAt'], properties:{ id:{type:'string'}, createdAt:{type:'string'} } };",
          "pm.response.to.have.jsonSchema(schema);"
        ]}
      }]
    }
  ]
}
